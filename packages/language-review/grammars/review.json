                },
                "4": {
                    "name": "string.review"
                },
                "6": {
                    "name": "keyword.review"
                }
            }
        },
        {
            "comment": "@<table>{envvars} ",
            "captures": {
                "1": {
                    "name": "keyword.review"
                },
                "3": {
                    "name": "keyword.review"
                },
                "2": {
                    "name": "support.function.review"
                },
                "5": {
                    "name": "keyword.review"
                },
                "4": {
                    "name": "variable.parameter.review"
                }
            },
            "name": "table.inline.review",
            "match": "(@<)(table)(>\\{)([^\\}]*)(\\})"
        },
        {
            "comment": "Footnote //footnote[site][...]",
            "begin": "^(//)(footnote)\\[([^\\]]*)\\]\\[",
            "end": "\\]",
            "name": "footnote.review",
            "beginCaptures": {
                "1": {
                    "name": "keyword.review"
                },
                "3": {
                    "name": "variable.parameter.review"
                },
                "2": {
                    "name": "support.function.review"
                }
            },
            "patterns": [
                {
                    "include": "$self"
                },
                {
                    "name": "string.review",
                    "match": "."
                }
            ]
        },
        {
            "comment": "@<fn>{site} ",
            "captures": {
                "1": {
                    "name": "keyword.review"
                },
                "3": {
                    "name": "keyword.review"
                },
                "2": {
                    "name": "support.function.review"
                },
                "5": {
                    "name": "keyword.review"
                },
                "4": {
                    "name": "variable.parameter.review"
                }
            },
