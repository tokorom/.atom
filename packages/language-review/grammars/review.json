            "end": "(^//\\})",
            "name": "emlist.review",
            "endCaptures": {
                "1": {
                    "name": "keyword.review"
                }
            },
            "beginCaptures": {
                "1": {
                    "name": "keyword.review"
                },
                "2": {
                    "name": "support.function.review"
                },
                "3": {
                    "name": "variable.parameter.review"
                },
                "5": {
                    "name": "string.review"
                },
                "6": {
                    "name": "string.review"
                },
                "8": {
                    "name": "keyword.review"
                }
            }
        },
        {
            "comment": "//source[...]{ ... //}",
            "begin": "^(//)(source)\\[([^\\]]*)\\](\\{)",
            "end": "(^//\\})",
            "name": "source.review",
            "endCaptures": {
                "1": {
                    "name": "keyword.review"
                }
            },
            "beginCaptures": {
                "1": {
                    "name": "keyword.review"
                },
                "3": {
                    "name": "string.review"
                },
                "2": {
                    "name": "support.function.review"
                },
                "4": {
                    "name": "keyword.review"
                }
            }
        },
        {
            "comment": "//listnum[hello][...]",
            "begin": "^(//)(listnum)\\[([^\\]]*)\\](\\[([^\\]]*)\\])?(?:\\[((\\\\]|[^]])*)\\])?(\\{)",
            "end": "(^//\\})",
            "name": "listnum.review",
            "endCaptures": {
                "1": {
                    "name": "keyword.review"
                }
            },
            "beginCaptures": {
              "1": {
                  "name": "keyword.review"
              },
              "2": {
                  "name": "support.function.review"
              },
              "3": {
                  "name": "variable.parameter.review"
              },
              "5": {
                  "name": "string.review"
              },
              "6": {
                  "name": "string.review"
              },
              "8": {
                  "name": "keyword.review"
              }
            }
        },
        {
            "comment": "@<list>{hello} ",
