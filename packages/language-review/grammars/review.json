                },
                "2": {
                    "name": "support.function.review"
                }
            },
            "name": "noindent.review",
            "match": "^(//)(noindent)"
        },
        {
            "comment": "//raw[...]",
            "captures": {
                "1": {
                    "name": "keyword.review"
                },
                "3": {
                    "name": "string.review"
                },
                "2": {
                    "name": "support.function.review"
                }
            },
            "name": "raw.review",
            "match": "^(//)(raw)\\[([^\\]]*)\\]"
        },
        {
            "comment": "//hoge{ ... //}",
            "begin": "^(//)([^\\{\\[\\]]+)(\\{)",
            "end": "(^//\\})",
            "name": "block.review",
            "endCaptures": {
                "1": {
                    "name": "keyword.review"
                }
            },
            "beginCaptures": {
                "1": {
                    "name": "keyword.review"
                },
                "3": {
                    "name": "keyword.review"
                },
                "2": {
                    "name": "support.function.review"
                }
            }
        },
        {
            "comment": "Comment #@# ",
            "name": "comment.line.review",
            "match": "^#@#.*"
        },
        {
            "comment": "Warning #@warn(...) ",
            "name": "comment.review",
            "match": "^#@warn\\(.*\\)"
        },
        {
            "comment": "Comment @<comment>{...} //comment{...} ",
            "name": "comment.review",
            "match": "(@<comment>|//comment)\\{.*\\}"
        },
        {
            "comment": "#@require, #@provide",
            "captures": {
                "1": {
                    "name": "keyword.review"
                },
                "3": {
                    "name": "support.function.review"
                },
                "2": {
                    "name": "support.function.review"
                }
            },
            "name": "require.review",
            "match": "^(#@(require)|#@(provide))"
        },
        {
            "comment": "#@mapfile(...) ... #@end",
            "begin": "^(#@(mapfile)|#@(mapoutput))\\(([^\\)]*)\\)",
            "end": "^(#@)(end)",
            "name": "mapfile.review",
            "endCaptures": {
                "1": {
                    "name": "keyword.review"
                },
                "2": {
                    "name": "support.function.review"
                }
            },
            "beginCaptures": {
                "1": {
                    "name": "keyword.review"
                },
                "3": {
                    "name": "support.function.review"
                },
                "2": {
                    "name": "support.function.review"
                },
                "4": {
                    "name": "string.review"
                }
            }
        },
        {
            "comment": "#@maprange(..., ...) ... #@end",
            "begin": "^(#@)(maprange)\\(([^,]*,[^\\)]*)\\)",
            "end": "^(#@)(end)",
            "name": "maprange.review",
            "endCaptures": {
                "1": {
                    "name": "keyword.review"
                },
                "2": {
                    "name": "support.function.review"
                }
            },
            "beginCaptures": {
                "1": {
                    "name": "keyword.review"
                },
                "3": {
                    "name": "string.review"
                },
                "2": {
                    "name": "support.function.review"
                }
            }
        },
        {
            "comment": "Inline instruction like @<list>{program} ",
            "captures": {
                "1": {
                    "name": "keyword.review"
                },
                "2": {
                    "name": "support.function.review"
                },
                "3": {
                    "name": "keyword.review"
                },
