            "match": "(@<)(fn)(>\\{)([^\\}]*)(\\})"
        },
        {
            "comment": "Bib //bibpaper[lins][Lins, 1991]{ ... //}",
            "begin": "^(//)(bibpaper)\\[([^\\]]*)\\]\\[((\\\\]|[^]])*)\\](\\{)",
            "end": "(^//\\})",
            "name": "bibpaper.review",
            "endCaptures": {
