{
    "scopeName" : "source.review",
    "fileTypes" : ["re"],
    "name" : "Re:VIEW",
    "patterns": [
        {
            "comment": "Paragraph = ",
            "captures": {
                "1": {
                    "name": "keyword.review"
                },
                "3": {
                    "name": "variable.parameter.review"
                },
                "4": {
                    "name": "string.review"
                }
            },
            "name": "paragraph.review",
            "match": "(^={1,5}(\\{([^\\}]+)\\})?)\\s(.*)"
        },
        {
            "comment": "Column ===[column]",
            "captures": {
                "1": {
                    "name": "keyword.review"
                },
                "3": {
                    "name": "string.review"
                },
                "2": {
                    "name": "support.function.review"
                }
            },
            "name": "column.review.begin",
            "match": "(^={1,5}\\[(column)\\])\\s(.*)"
        },
        {
            "comment": "Column ===[/column]",
            "captures": {
                "1": {
                    "name": "keyword.review"
                },
                "2": {
                    "name": "support.function.review"
                }
            },
            "name": "column.review.end",
            "match": "(^={1,5}\\[/(column)\\])"
        },
        {
            "comment": "Bullet point * ",
            "name": "keyword.review",
            "match": "^\\s+\\*+ "
        },
        {
            "comment": "Numeric bullet point like 1. ",
            "name": "keyword.review",
            "match": "^\\s+[0-9]+\\. "
        },
        {
            "comment": "Definition list like : Alpha ",
            "captures": {
                "1": {
                    "name": "keyword.review"
                },
                "2": {
                    "name": "string.review"
                }
            },
            "name": "definition.review",
            "match": "^\\s*(:)\\s(.*)"
        },
        {
            "comment": "List //list[main][main()]{ ... //}",
            "begin": "^(//)(list)\\[([^\\]]*)\\](\\[([^\\]]*)\\])?(?:\\[((\\\\]|[^]])*)\\])?(\\{)",
            "end": "(^//\\})",
            "name": "list.review",
            "endCaptures": {
                "1": {
                    "name": "keyword.review"
                }
            },
            "beginCaptures": {
                "1": {
                    "name": "keyword.review"
                },
                "2": {
                    "name": "support.function.review"
                },
                "3": {
                    "name": "variable.parameter.review"
                },
                "5": {
                    "name": "string.review"
                },
                "6": {
                    "name": "string.review"
                },
                "8": {
                    "name": "keyword.review"
                }
            }
        },
        {
            "comment": "EMList //emlist[main()]{ ... //}",
